<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss} %c{1} - %msg%n"/>
        </Console>

        <RollingFile name="file-log" fileName="./logs/orders-api.log"
                     filePattern="./logs/$${date:yyyy-MM}/orders-api-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss} %c{1} - %msg%n"/>
            <SizeBasedTriggeringPolicy size="10 MB"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="file-log"/>
        </Root>
    </Loggers>
</Configuration>